{
    "Comment": "Image Processing State Machine",
    "StartAt": "GetFileType",
    "States": {
        "GetFileType": {
            "Type": "Task",
            "Resource": "${GetFileTypeFunctionArn}",
            "TimeoutSeconds": 10,
            "ResultPath": "$.results.fileType",
            "Next": "CheckFileType"
        },
        "CheckFileType": {
            "Type": "Choice",
            "Choices": [
                {
                    "Variable": "$.results.fileType",
                    "StringEquals": "png",
                    "Next": "ProcessFile"
                }
            ],
            "Default": "DeleteSourceFile"
        },
        "ProcessFile": {
            "Type": "Parallel",
            "Next": "WriteToDynamoDb",
            "Branches": [
                {
                    "StartAt": "CopyToDestination",
                    "States": {
                        "CopyToDestination": {
                            "Type": "Task",
                            "Resource": "${CopyFileFunctionArn}",
                            "TimeoutSeconds": 10,
                            "End": true
                        }
                    }
                },
                {
                    "StartAt": "ResizeImage",
                    "States": {
                        "ResizeImage": {
                            "Type": "Task",
                            "Resource": "${ResizeImageFunctionArn}",
                            "TimeoutSeconds": 10,
                            "End": true
                        }
                    }
                }
            ]
        },
        "WriteToDynamoDb": {
            "Type": "Pass",
            "Next": "DeleteSourceFile"
        },
        "DeleteSourceFile": {
            "Type": "Pass",
            "End": true
        }
    }
}