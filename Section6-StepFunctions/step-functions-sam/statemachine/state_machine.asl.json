{
    "Comment": "A Hello World example of the Amazon States Language using Pass states",
    "StartAt": "WaitForSomeTime",
    "States": {
        "WaitForSomeTime": {
            "Type": "Wait",
            "Next": "CalculateSquare",
            "Comment": "Wait for a some time",
            "Seconds": 1
        },
        "CalculateSquare": {
            "Type": "Task",
            "Resource": "${CalculateSquareFunctionArn}",
            "TimeoutSeconds": 10,
            "Next": "Hello"
        },
        "Hello": {
            "Type": "Pass",
            "Result": "Hello",
            "Next": "World"
        },
        "World": {
            "Type": "Pass",
            "Result": "World",
            "End": true
        }
    }
}