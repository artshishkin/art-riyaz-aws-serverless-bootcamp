{
    "Comment": "A Hello World example of the Amazon States Language using Pass states",
    "StartAt": "WaitForSomeTime",
    "States": {
        "WaitForSomeTime": {
            "Type": "Wait",
            "SecondsPath": "$.waitTime",
            "Next": "Hello",
            "Comment": "Wait seconds from input through jsonPath"
        },
        "Hello": {
            "Type": "Pass",
            "Result": "Hello",
            "Next": "World"
        },
        "World": {
            "Type": "Pass",
            "Result": "World",
            "End": true
        }
    }
}